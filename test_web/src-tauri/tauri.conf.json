{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "泛舟RPC调试工具",
  "version": "1.0.0",
  "identifier": "com.fanzhou.rpc-debug-tool",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "泛舟RPC服务器调试工具 - 启动",
        "width": 600,
        "center": true,
        "url": "launch.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "externalBin": [
      "bin/websocat"
    ],
    "icon": [],
    "longDescription": "泛舟RPC服务器调试工具 - 支持WebSocket代理和设备控制",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "泛舟RPC调试工具",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "bin/websocat",
          "sidecar": true,
          "args": true
        }
      ]
    }
  }
}
