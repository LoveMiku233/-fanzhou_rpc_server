/* FanZhou RPC Client Stylesheet */
/* 针对7寸1024x600触屏优化的Qt5.12样式 */
/* 左侧菜单栏 + 右侧内容区布局 */

/* Main Window */
QMainWindow {
    background-color: #f5f5f5;
}

/* Sidebar */
#sidebar {
    background-color: #2c3e50;
    border-right: 2px solid #1a252f;
}

#sidebarLogo {
    color: #ffffff;
    font-size: 18px;
    font-weight: bold;
    padding: 12px 8px;
    border-bottom: 1px solid #34495e;
}

#sidebarVersion {
    color: #7f8c8d;
    font-size: 12px;
    padding: 8px;
}

/* Menu Buttons in Sidebar */
#menuButton {
    background-color: transparent;
    color: #bdc3c7;
    border: none;
    border-radius: 8px;
    padding: 14px 12px;
    text-align: left;
    font-size: 14px;
    font-weight: bold;
    min-height: 48px;
}

#menuButton:hover {
    background-color: #34495e;
    color: #ffffff;
}

#menuButton:checked {
    background-color: #3498db;
    color: #ffffff;
}

#menuButton:pressed {
    background-color: #2980b9;
}

/* Content Stack */
#contentStack {
    background-color: #ffffff;
}

/* Scroll Area */
QScrollArea {
    background-color: #ffffff;
    border: none;
}

QScrollArea > QWidget > QWidget {
    background-color: #ffffff;
}

/* Group Boxes */
QGroupBox {
    font-weight: bold;
    font-size: 14px;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    margin-top: 14px;
    padding-top: 12px;
    background-color: #ffffff;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 12px;
    color: #2c3e50;
}

/* Push Buttons - 触屏优化，增大点击区域 */
QPushButton {
    background-color: #4a90d9;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 14px 22px;
    min-width: 90px;
    min-height: 44px;
    font-weight: bold;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #357abd;
}

QPushButton:pressed {
    background-color: #2a5f8f;
}

QPushButton:disabled {
    background-color: #cccccc;
    color: #666666;
}

QPushButton[type="success"] {
    background-color: #27ae60;
}

QPushButton[type="success"]:hover {
    background-color: #219a52;
}

QPushButton[type="success"]:pressed {
    background-color: #1e8449;
}

QPushButton[type="warning"] {
    background-color: #f39c12;
}

QPushButton[type="warning"]:hover {
    background-color: #d68910;
}

QPushButton[type="warning"]:pressed {
    background-color: #b9770e;
}

QPushButton[type="danger"] {
    background-color: #e74c3c;
}

QPushButton[type="danger"]:hover {
    background-color: #c0392b;
}

QPushButton[type="danger"]:pressed {
    background-color: #a93226;
}

/* Line Edit - 触屏优化 */
QLineEdit {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 12px 16px;
    background-color: white;
    font-size: 14px;
    min-height: 40px;
}

QLineEdit:focus {
    border-color: #3498db;
}

/* SpinBox - 触屏优化，增大按钮 */
QSpinBox {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 12px 16px;
    background-color: white;
    font-size: 14px;
    min-height: 40px;
    min-width: 100px;
}

QSpinBox:focus {
    border-color: #3498db;
}

QSpinBox::up-button, QSpinBox::down-button {
    width: 32px;
    border: none;
    background-color: #f0f0f0;
}

QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #e0e0e0;
}

QSpinBox::up-button:pressed, QSpinBox::down-button:pressed {
    background-color: #d0d0d0;
}

QSpinBox::up-arrow {
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-bottom: 10px solid #666666;
}

QSpinBox::down-arrow {
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 10px solid #666666;
}

/* Combo Box - 触屏优化，使用纯CSS下拉箭头（不依赖图标） */
QComboBox {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 12px 44px 12px 16px;
    background-color: white;
    min-width: 120px;
    min-height: 40px;
    font-size: 14px;
}

QComboBox:focus {
    border-color: #3498db;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 40px;
    border: none;
    border-left: 2px solid #e0e0e0;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    background-color: #f5f5f5;
}

QComboBox::drop-down:hover {
    background-color: #e8e8e8;
}

/* 纯CSS三角形下拉箭头，不使用图标 */
QComboBox::down-arrow {
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 10px solid #666666;
}

QComboBox::down-arrow:on {
    border-top: 10px solid #333333;
}

/* ComboBox下拉列表 - 触屏优化 */
QComboBox QAbstractItemView {
    border: 2px solid #e0e0e0;
    border-radius: 6px;
    background-color: white;
    selection-background-color: #3498db;
    selection-color: white;
    padding: 4px;
}

QComboBox QAbstractItemView::item {
    min-height: 44px;
    padding: 10px 14px;
    font-size: 14px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #ecf0f1;
}

/* Text Edit / Log View */
QTextEdit, QPlainTextEdit {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    background-color: #1e1e1e;
    color: #d4d4d4;
    font-family: "Consolas", "Monaco", monospace;
    font-size: 13px;
    padding: 10px;
}

/* Table Widget - 触屏优化 */
QTableWidget {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    background-color: white;
    gridline-color: #f0f0f0;
    font-size: 13px;
}

QTableWidget::item {
    padding: 12px;
    min-height: 40px;
}

QTableWidget::item:selected {
    background-color: #3498db;
    color: white;
}

QHeaderView::section {
    background-color: #ecf0f1;
    padding: 12px;
    border: none;
    border-bottom: 2px solid #e0e0e0;
    font-weight: bold;
    font-size: 13px;
    min-height: 40px;
}

/* Tab Widget - 触屏优化 */
QTabWidget::pane {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    background-color: white;
}

QTabBar::tab {
    background-color: #ecf0f1;
    border: 2px solid #e0e0e0;
    border-bottom: none;
    padding: 14px 22px;
    margin-right: 2px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-size: 14px;
    font-weight: bold;
}

QTabBar::tab:selected {
    background-color: white;
    border-bottom: 2px solid white;
}

QTabBar::tab:hover:!selected {
    background-color: #d5dbdb;
}

/* Status Bar */
QStatusBar {
    background-color: #ecf0f1;
    border-top: 2px solid #e0e0e0;
    font-size: 13px;
    min-height: 36px;
    padding: 4px 8px;
}

/* Scroll Bar - 触屏优化，增宽滚动条便于触控 */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 20px;
    border-radius: 8px;
    margin: 2px;
}

QScrollBar::handle:vertical {
    background-color: #bdc3c7;
    border-radius: 8px;
    min-height: 60px;
}

QScrollBar::handle:vertical:hover {
    background-color: #95a5a6;
}

QScrollBar::handle:vertical:pressed {
    background-color: #7f8c8d;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #f5f5f5;
    height: 20px;
    border-radius: 8px;
    margin: 2px;
}

QScrollBar::handle:horizontal {
    background-color: #bdc3c7;
    border-radius: 8px;
    min-width: 60px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #95a5a6;
}

QScrollBar::handle:horizontal:pressed {
    background-color: #7f8c8d;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Labels */
QLabel {
    color: #2c3e50;
    font-size: 14px;
}

QLabel[type="title"] {
    font-size: 20px;
    font-weight: bold;
    color: #2c3e50;
}

QLabel[type="status-connected"] {
    color: #27ae60;
    font-weight: bold;
}

QLabel[type="status-disconnected"] {
    color: #e74c3c;
    font-weight: bold;
}

/* Splitter - 触屏优化，增宽分割手柄 */
QSplitter::handle {
    background-color: #e0e0e0;
}

QSplitter::handle:horizontal {
    width: 8px;
}

QSplitter::handle:vertical {
    height: 8px;
}

/* Tool Bar - 触屏优化 */
QToolBar {
    background-color: #ecf0f1;
    border-bottom: 2px solid #e0e0e0;
    spacing: 10px;
    padding: 6px;
}

QToolBar QToolButton {
    padding: 12px 16px;
    font-size: 14px;
    min-width: 80px;
    min-height: 40px;
}

/* Menu Bar */
QMenuBar {
    background-color: #ecf0f1;
    border-bottom: 2px solid #e0e0e0;
    padding: 4px;
    font-size: 14px;
}

QMenuBar::item {
    padding: 10px 18px;
}

QMenuBar::item:selected {
    background-color: #d5dbdb;
}

QMenu {
    background-color: white;
    border: 2px solid #e0e0e0;
    padding: 6px;
    border-radius: 6px;
}

QMenu::item {
    padding: 14px 32px;
    font-size: 14px;
    min-height: 36px;
}

QMenu::item:selected {
    background-color: #3498db;
    color: white;
    border-radius: 4px;
}
